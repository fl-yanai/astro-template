---
import Header from '@/components/ui/groups/Layouts/Header.astro'

interface Props {
  title: string
  description: string
  bodyStyle?: string
  lang?: 'ja' | 'en'
}
const { title, description, bodyStyle, lang = 'ja' } = Astro.props
---

<script>
  import '@/styles/wrapper.css'
</script>

<html lang={lang}>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <meta name='generator' content={Astro.generator} />
    <slot name='meta' />
    <meta name='description' content={description} />
    <title>{title}</title>
  </head>
  <body class={bodyStyle}>
    <Header width='wrapper-l' />
    <main class='wrapper-l'>
      <slot />
    </main>
    <slot name='script' />
  </body>
</html>
