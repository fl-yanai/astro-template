---
import type { typeHtml } from './type'

interface Props extends typeHtml {}
const { lang = 'ja', bodyStyle, title } = Astro.props
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <meta name='generator' content={Astro.generator} />
    <link rel='stylesheet' href='/css/common/style.css' />
    <slot name='meta' />
    <title>{title}</title>
  </head>
  <body class={bodyStyle}>
    <slot />
    <slot name='script' />
  </body>
</html>
