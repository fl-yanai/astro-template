---
interface Props {
  items: { title: string; body: string }[]
}
const { items } = Astro.props
---

<div class='mx-auto max-w-lg'>
  <div class='divide-y divide-gray-100'>
    {
      items.map((item) => {
        return (
          <details class='group'>
            <summary class='flex cursor-pointer list-none items-center justify-between py-4 text-lg font-medium'>
              {item.title}
              <div>
                <svg
                  xmlns='http://www.w3.org/2000/svg'
                  fill='none'
                  viewBox='0 0 24 24'
                  stroke-width='1.5'
                  stroke='currentColor'
                  class='block h-5 w-5 transition-all duration-300 group-open:rotate-180'
                >
                  <path
                    stroke-linecap='round'
                    stroke-linejoin='round'
                    d='M19.5 8.25l-7.5 7.5-7.5-7.5'
                  />
                </svg>
              </div>
            </summary>
            <div class='pb-4'> {item.body}</div>
          </details>
        )
      })
    }
  </div>
</div>
